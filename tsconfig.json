{
  "compilerOptions": {
    "target": "ES2021",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "outDir": "build",
    "types": [],
    "typeRoots": ["./types"],
    "sourceMap": false
  },
  "include": ["src", "tests", "types"],
  "exclude": ["node_modules", "build"]
}
